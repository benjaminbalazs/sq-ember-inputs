{{sq-input-text
		placeholder=placeholder
		value=selected.name
		required=required
		criteria=criteria
		medium=medium
		tiny=tiny
		large=large
		small=small
		ignoreLang=ignoreLang
		ignoreDirection=ignoreDirection
}}

<img class='sq-right arrow' src="assets/images/sq-dropdown-arrow.svg">

<ul>
	{{#each items as |model|}}
		{{sq-input-dropdown-item model=model select='select' ignoreDirection=ignoreDirection}}
	{{/each}}
</ul>
