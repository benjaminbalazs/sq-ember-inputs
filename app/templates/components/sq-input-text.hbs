{{input
		disabled=disabled
		type=type
		value=value
		focus-in="focusIn"
		focus-out="focusOut"
		required=required
		maxlength=maxlength
		dasherize=dasherize
		subdomain=subdomain
		domain=domain
		email=email
		number=number
		format=format
		enterPressed='enterPressed'
		whitespace=whitespace
		capital=capital
		transform=transform
		persistent=persistent
		price=price
		register='registerInputChild'
}}

{{sq-ui-adaptive-label classNames="sq-align-left" value=placeholder tagName='label'}}

{{#if before}}

	{{input value=before classNames='before' autoresize=true register='registerBeforeChild'}}

{{/if}}

{{#if after}}

	{{input value=after classNames='after' register='registerAfterChild'}}

{{/if}}

{{#if maxdisplay}}

	<p dir="ltr" language="en">{{maxcount}}</p>

{{/if}}

{{yield}}
