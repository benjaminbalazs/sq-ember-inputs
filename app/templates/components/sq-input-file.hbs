{{#sq-file-droplet required=required authentication=authentication namespace=namespace change='change' value=value as |dragging uploading percentage processing working|}}

	{{#if working}}

		{{#if uploading}}
			{{sq-input-text disabled=true placeholder=percentage}}
		{{else}}
			{{sq-input-text disabled=true placeholder='Processing'}}
		{{/if}}

	{{else}}

		{{sq-input-text disabled=true required=required placeholder=placeholder value=value.filename}}

	{{/if}}

{{/sq-file-droplet}}
